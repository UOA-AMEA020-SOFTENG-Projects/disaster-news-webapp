{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "module": "commonjs",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
